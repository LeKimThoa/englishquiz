<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38b6FF"
    tools:context=".Test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#38b6FF"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:layout_below="@id/txtCauHoi"
            android:id="@+id/textCauhoi"
            android:layout_width="357dp"
            android:layout_height="135dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white"
            android:textSize="15dp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textCauhoi"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/radioButtonA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/white"
                android:padding="10dp"
                android:text="A. "
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButtonB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/white"
                android:padding="10dp"
                android:text="B. "
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButtonC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/white"
                android:padding="10dp"
                android:text="C. "
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/white"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radioButtonD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/white"
                android:padding="10dp"
                android:text="D. "
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textColorLink="@android:color/white"
                android:textSize="15dp" />

        </RadioGroup>


        <ImageView
            android:id="@+id/cancelbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/remove"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />


        <ImageView
            android:id="@+id/buttonNext"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:layout_below="@id/radioGroup"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/checkmark"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/txtDoKho"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:width="100dp"
            android:text="Level:"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_below="@id/cancelbutton"/>

        <TextView
            android:id="@+id/txtCauHoi"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDoKho"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:width="100dp"
            android:height="43dp"
            android:text="Question:"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_below="@id/cancelbutton"
            android:id="@+id/textDokho"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/txtDoKho"
            android:width="100dp"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textSocauhoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textDokho"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/txtCauHoi"
            android:width="100dp"
            android:height="43dp"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>