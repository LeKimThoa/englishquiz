<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38b6FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/rankingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="RANKING"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/buttonReturnMenu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listviewRank"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:text="Return"
            android:textSize="25dp"
            android:background="@drawable/buttonstyle"
            android:textColor="#38b6FF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />

    <ListView
        android:id="@+id/listviewRank"
        android:layout_below="@id/rankingtext"
        android:layout_width="313dp"
        android:layout_height="329dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>