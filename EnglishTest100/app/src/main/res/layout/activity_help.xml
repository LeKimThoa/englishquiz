<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="404dp"
        android:layout_height="399dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/layouthelp"
            android:layout_width="401dp"
            android:layout_height="60dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/next"
                android:layout_width="54dp"
                android:layout_height="41dp"
                android:padding="10dp"
                android:src="@drawable/previous" />

            <ImageView
                android:id="@+id/Img"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/next"
                android:src="@drawable/hd1" />

            <ImageView
                android:id="@+id/Tutorial"
                android:layout_width="248dp"
                android:layout_height="43dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/Img"
                android:padding="5dp"
                android:src="@drawable/hdsd" />

        </RelativeLayout>

        <TextView
            android:id="@+id/Dautien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layouthelp"
            android:padding="5dp"
            android:text="Đầu tiên sau khi khởi động ứng dụng thì ........................................................................................................................................................................................................"
            android:textColor="#38B6FF"
            android:textSize="12dp"
            tools:ignore="NotSibling" />

        <ImageView
            android:id="@+id/Img2"
            android:layout_width="383dp"
            android:layout_height="217dp"
            android:layout_below="@+id/Dautien"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            android:src="@drawable/img1" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>