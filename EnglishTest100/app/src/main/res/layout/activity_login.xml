<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38b6FF"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/Img"
            android:layout_width="423dp"
            android:layout_height="261dp"
            android:layout_gravity="center"
            android:src="@drawable/hoasen" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/textview1"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:layout_below="@id/Img"
            android:layout_marginTop="5dp"
            tools:ignore="NotSibling"
            android:layout_marginLeft="25dp" >
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card2"
            android:visibility="visible"
            android:layout_marginTop="2dp"
            android:layout_below="@id/textview1"
            android:padding="20dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="7dp"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="20dp"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:id="@+id/usernametext"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:textColor="#366ce0"
                    android:layout_marginLeft="20dp">
                </androidx.appcompat.widget.AppCompatTextView>

                <EditText
                    android:id="@+id/editTextID"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="#E8DD7D"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:textSize="28sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:id="@+id/psstext"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:textColor="#366ce0"
                    android:layout_marginLeft="20dp">
                </androidx.appcompat.widget.AppCompatTextView>

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="#E8DD7D"
                    android:hint="Password"
                    android:inputType="textPersonName"
                    android:textSize="28sp" />

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="35dp"
                    android:text="Login"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"
                    android:background="@drawable/buttonred"
                     />

                <Button
                    android:id="@+id/buttonToRegister"
                    android:background="#BC0000"
                    android:layout_width="95dp"
                    android:layout_height="26dp"
                    android:text="Register"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:textColor="#ffffff"
                    />

                <TextView
                    android:id="@+id/ErrorConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="637dp"
                    android:textColor="#E80000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>